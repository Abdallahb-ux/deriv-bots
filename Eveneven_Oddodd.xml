<xml xmlns="https://developers.google.com/blockly/xml" is_dbot="true" collection="false">
  <variables>
    <variable id="DigitAnalysis">DigitAnalysis</variable>
    <variable id="Stake">Stake</variable>
    <variable id="Martingale">Martingale</variable>
    <variable id="TradePercentage">TradePercentage</variable>
    <variable id="InitialStake">InitialStake</variable>
    <variable id="TakeProfit">TakeProfit</variable>
    <variable id="StopLoss">StopLoss</variable>
    <variable id="TotalProfit">TotalProfit</variable>
    <variable id="LastResult">LastResult</variable>
    <variable id="CurrentStake">CurrentStake</variable>
    <variable id="SequenceStep">SequenceStep</variable>
  </variables>

  <!-- Run once at start: set parameters -->
  <block type="procedures_defnoreturn" id="init_1" x="20" y="20">
    <field name="NAME">on_start</field>
    <statement name="STACK">
      <!-- Set basic parameters -->
      <block type="variables_set">
        <field name="VAR" id="DigitAnalysis">DigitAnalysis</field>
        <value name="VALUE">
          <block type="math_number"><field name="NUM">20</field></block>
        </value>
        <next>
          <block type="variables_set">
            <field name="VAR" id="InitialStake">InitialStake</field>
            <value name="VALUE"><block type="math_number"><field name="NUM">0.35</field></block></value>
            <next>
              <block type="variables_set">
                <field name="VAR" id="Stake">Stake</field>
                <value name="VALUE"><block type="variables_get"><field name="VAR" id="InitialStake"/></block></value>
                <next>
                  <block type="variables_set">
                    <field name="VAR" id="CurrentStake">CurrentStake</field>
                    <value name="VALUE"><block type="variables_get"><field name="VAR" id="InitialStake"/></block></value>
                    <next>
                      <block type="variables_set">
                        <field name="VAR" id="Martingale">Martingale</field>
                        <value name="VALUE"><block type="math_number"><field name="NUM">2</field></block></value>
                        <next>
                          <block type="variables_set">
                            <field name="VAR" id="TradePercentage">TradePercentage</field>
                            <value name="VALUE"><block type="math_number"><field name="NUM">60</field></block></value>
                            <next>
                              <block type="variables_set">
                                <field name="VAR" id="TakeProfit">TakeProfit</field>
                                <value name="VALUE"><block type="math_number"><field name="NUM">10</field></block></value>
                                <next>
                                  <block type="variables_set">
                                    <field name="VAR" id="StopLoss">StopLoss</field>
                                    <value name="VALUE"><block type="math_number"><field name="NUM">-10</field></block></value>
                                    <next>
                                      <block type="variables_set">
                                        <field name="VAR" id="TotalProfit">TotalProfit</field>
                                        <value name="VALUE"><block type="math_number"><field name="NUM">0</field></block></value>
                                        <next>
                                          <block type="variables_set">
                                            <field name="VAR" id="SequenceStep">SequenceStep</field>
                                            <value name="VALUE"><block type="math_number"><field name="NUM">0</field></block></value>
                                          </block>
                                        </next>
                                      </block>
                                    </next>
                                  </block>
                                </next>
                              </block>
                            </next>
                          </block>
                        </next>
                      </block>
                    </next>
                  </block>
                </next>
              </block>
            </next>
          </block>
        </next>
      </block>
    </statement>
  </block>

  <!-- Main loop: repeat until takeprofit or stoploss -->
  <block type="controls_whileUntil" id="main_loop" x="20" y="360">
    <field name="MODE">WHILE</field>
    <value name="BOOL">
      <block type="logic_boolean_compare">
        <field name="OP">AND</field>
        <value name="A">
          <block type="logic_compare">
            <field name="OP">LT</field>
            <value name="A"><block type="variables_get"><field name="VAR" id="TotalProfit"/></block></value>
            <value name="B"><block type="variables_get"><field name="VAR" id="TakeProfit"/></block></value>
          </block>
        </value>
        <value name="B">
          <block type="logic_compare">
            <field name="OP">GT</field>
            <value name="A"><block type="variables_get"><field name="VAR" id="TotalProfit"/></block></value>
            <value name="B"><block type="variables_get"><field name="VAR" id="StopLoss"/></block></value>
          </block>
        </value>
      </block>
    </value>
    <statement name="DO">
      <!-- Decide current side based on SequenceStep (0,1 -> odd; 2,3 -> even) -->
      <block type="controls_if">
        <value name="IF0">
          <block type="logic_operation">
            <field name="OP">OR</field>
            <value name="A">
              <block type="logic_compare"><field name="OP">EQ</field>
                <value name="A"><block type="variables_get"><field name="VAR" id="SequenceStep"/></block></value>
                <value name="B"><block type="math_number"><field name="NUM">0</field></block></value>
              </block>
            </value>
            <value name="B">
              <block type="logic_compare"><field name="OP">EQ</field>
                <value name="A"><block type="variables_get"><field name="VAR" id="SequenceStep"/></block></value>
                <value name="B"><block type="math_number"><field name="NUM">1</field></block></value>
              </block>
            </value>
          </block>
        </value>
        <statement name="DO0">
          <!-- Perform two odd trades in a row -->
          <block type="controls_repeat_ext">
            <value name="TIMES"><block type="math_number"><field name="NUM">2</field></block></value>
            <statement name="DO">
              <!-- Purchase Odd contract -->
              <block type="trade_call_buy">
                <field name="CONTRACT">DIGITODD</field>
                <field name="DURATION_TYPE">TICKS</field>
                <field name="DURATION">1</field>
                <value name="AMOUNT"><block type="variables_get"><field name="VAR" id="CurrentStake"/></block></value>
                <next>
                  <!-- After purchase: update TotalProfit and apply martingale on loss -->
                  <block type="variables_set">
                    <field name="VAR" id="LastResult">LastResult</field>
                    <value name="VALUE">
                      <block type="trade_result_profit"/>
                    </value>
                    <next>
                      <block type="variables_set">
                        <field name="VAR" id="TotalProfit">TotalProfit</field>
                        <value name="VALUE">
                          <block type="math_arithmetic">
                            <field name="OP">ADD</field>
                            <value name="A"><block type="variables_get"><field name="VAR" id="TotalProfit"/></block></value>
                            <value name="B"><block type="variables_get"><field name="VAR" id="LastResult"/></block></value>
                          </block>
                        </value>
                        <next>
                          <block type="controls_if">
                            <value name="IF0">
                              <block type="logic_compare"><field name="OP">LT</field>
                                <value name="A"><block type="variables_get"><field name="VAR" id="LastResult"/></block></value>
                                <value name="B"><block type="math_number"><field name="NUM">0</field></block></value>
                              </block>
                            </value>
                            <statement name="DO0">
                              <!-- On loss, increase CurrentStake by Martingale -->
                              <block type="variables_set">
                                <field name="VAR" id="CurrentStake">CurrentStake</field>
                                <value name="VALUE">
                                  <block type="math_arithmetic"><field name="OP">MULTIPLY</field>
                                    <value name="A"><block type="variables_get"><field name="VAR" id="CurrentStake"/></block></value>
                                    <value name="B"><block type="variables_get"><field name="VAR" id="Martingale"/></block></value>
                                  </block>
                                </value>
                              </block>
                            </statement>
                            <next>
                              <!-- On win, reset CurrentStake to InitialStake -->
                              <block type="controls_if">
                                <value name="IF0">
                                  <block type="logic_compare"><field name="OP">GT</field>
                                    <value name="A"><block type="variables_get"><field name="VAR" id="LastResult"/></block></value>
                                    <value name="B"><block type="math_number"><field name="NUM">0</field></block></value>
                                  </block>
                                </value>
                                <statement name="DO0">
                                  <block type="variables_set">
                                    <field name="VAR" id="CurrentStake">CurrentStake</field>
                                    <value name="VALUE"><block type="variables_get"><field name="VAR" id="InitialStake"/></block></value>
                                  </block>
                                </statement>
                              </block>
                            </next>
                          </block>
                        </next>
                      </block>
                    </next>
                  </block>
                </next>
              </block>
            </statement>
          </block>
          <!-- increment SequenceStep (move to 2) -->
          <next>
            <block type="variables_set">
              <field name="VAR" id="SequenceStep">SequenceStep</field>
              <value name="VALUE">
                <block type="math_number"><field name="NUM">2</field></block>
              </value>
            </block>
          </next>
        </statement>

        <!-- ELSE: SequenceStep is 2 or 3 -> do even even -->
        <next>
          <block type="controls_if">
            <value name="IF0">
              <block type="logic_operation"><field name="OP">OR</field>
                <value name="A">
                  <block type="logic_compare"><field name="OP">EQ</field>
                    <value name="A"><block type="variables_get"><field name="VAR" id="SequenceStep"/></block></value>
                    <value name="B"><block type="math_number"><field name="NUM">2</field></block></value>
                  </block>
                </value>
                <value name="B">
                  <block type="logic_compare"><field name="OP">EQ</field>
                    <value name="A"><block type="variables_get"><field name="VAR" id="SequenceStep"/></block></value>
                    <value name="B"><block type="math_number"><field name="NUM">3</field></block></value>
                  </block>
                </value>
              </block>
            </value>
            <statement name="DO0">
              <!-- Perform two even trades in a row -->
              <block type="controls_repeat_ext">
                <value name="TIMES"><block type="math_number"><field name="NUM">2</field></block></value>
                <statement name="DO">
                  <!-- Purchase Even contract -->
                  <block type="trade_call_buy">
                    <field name="CONTRACT">DIGITEVEN</field>
                    <field name="DURATION_TYPE">TICKS</field>
                    <field name="DURATION">1</field>
                    <value name="AMOUNT"><block type="variables_get"><field name="VAR" id="CurrentStake"/></block></value>
                    <next>
                      <!-- After purchase: update TotalProfit and apply martingale on loss (same as above) -->
                      <block type="variables_set">
                        <field name="VAR" id="LastResult">LastResult</field>
                        <value name="VALUE"><block type="trade_result_profit"/></value>
                        <next>
                          <block type="variables_set">
                            <field name="VAR" id="TotalProfit">TotalProfit</field>
                            <value name="VALUE">
                              <block type="math_arithmetic"><field name="OP">ADD</field>
                                <value name="A"><block type="variables_get"><field name="VAR" id="TotalProfit"/></block></value>
                                <value name="B"><block type="variables_get"><field name="VAR" id="LastResult"/></block></value>
                              </block>
                            </value>
                            <next>
                              <block type="controls_if">
                                <value name="IF0">
                                  <block type="logic_compare"><field name="OP">LT</field>
                                    <value name="A"><block type="variables_get"><field name="VAR" id="LastResult"/></block></value>
                                    <value name="B"><block type="math_number"><field name="NUM">0</field></block></value>
                                  </block>
                                </value>
                                <statement name="DO0">
                                  <block type="variables_set">
                                    <field name="VAR" id="CurrentStake">CurrentStake</field>
                                    <value name="VALUE">
                                      <block type="math_arithmetic"><field name="OP">MULTIPLY</field>
                                        <value name="A"><block type="variables_get"><field name="VAR" id="CurrentStake"/></block></value>
                                        <value name="B"><block type="variables_get"><field name="VAR" id="Martingale"/></block></value>
                                      </block>
                                    </value>
                                  </block>
                                </statement>
                                <next>
                                  <block type="controls_if">
                                    <value name="IF0">
                                      <block type="logic_compare"><field name="OP">GT</field>
                                        <value name="A"><block type="variables_get"><field name="VAR" id="LastResult"/></block></value>
                                        <value name="B"><block type="math_number"><field name="NUM">0</field></block></value>
                                      </block>
                                    </value>
                                    <statement name="DO0">
                                      <block type="variables_set">
                                        <field name="VAR" id="CurrentStake">CurrentStake</field>
                                        <value name="VALUE"><block type="variables_get"><field name="VAR" id="InitialStake"/></block></value>
                                      </block>
                                    </statement>
                                  </block>
                                </next>
                              </block>
                            </next>
                          </block>
                        </next>
                      </block>
                    </next>
                  </block>
                </statement>
              </block>
              <!-- After doing even-even, cycle back to SequenceStep 0 -->
              <next>
                <block type="variables_set">
                  <field name="VAR" id="SequenceStep">SequenceStep</field>
                  <value name="VALUE"><block type="math_number"><field name="NUM">0</field></block></value>
                </block>
              </next>
            </statement>
          </block>
        </next>
      </block>

      <!-- Safety: tiny sleep to avoid spamming (1 second) -->
      <next>
        <block type="wait_seconds">
          <value name="SECONDS"><block type="math_number"><field name="NUM">1</field></block></value>
        </block>
      </next>
    </statement>
  </block>

  <!-- Hook: call on_start then enter main loop -->
  <block type="run_on_start" id="run_once_call" x="20" y="760">
    <next>
      <block type="procedures_callnoreturn" id="call_init">
        <field name="NAME">on_start</field>
        <next>
          <block type="controls_callfunction" id="start_main_loop">
            <field name="NAME">main_loop_start</field>
          </block>
        </next>
      </block>
    </next>
  </block>
</xml>
