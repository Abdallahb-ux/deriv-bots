<xml xmlns="https://developers.google.com/blockly/xml" is_dbot="true" collection="false">
  <variables>
    <variable id="stakeVar">Stake</variable>
    <variable id="martingaleVar">Martingale</variable>
    <variable id="currentStakeVar">CurrentStake</variable>
    <variable id="totalProfitVar">TotalProfit</variable>
    <variable id="tpVar">TP</variable>
    <variable id="slVar">SL</variable>
    <variable id="sequenceIndexVar">SequenceIndex</variable>
    <variable id="tradeSequenceVar">TradeSequence</variable>
  </variables>

  <!-- Initialization -->
  <block type="variables_set" id="init_stake" x="20" y="20">
    <field name="VAR" id="stakeVar">Stake</field>
    <value name="VALUE"><shadow type="math_number"><field name="NUM">1</field></shadow></value>
    <next>
      <block type="variables_set" id="init_martingale">
        <field name="VAR" id="martingaleVar">Martingale</field>
        <value name="VALUE"><shadow type="math_number"><field name="NUM">2</field></shadow></value>
        <next>
          <block type="variables_set" id="init_current_stake">
            <field name="VAR" id="currentStakeVar">CurrentStake</field>
            <value name="VALUE"><shadow type="variables_get"><field name="VAR" id="stakeVar">Stake</field></shadow></value>
            <next>
              <block type="variables_set" id="init_total_profit">
                <field name="VAR" id="totalProfitVar">TotalProfit</field>
                <value name="VALUE"><shadow type="math_number"><field name="NUM">0</field></shadow></value>
                <next>
                  <block type="variables_set" id="init_tp">
                    <field name="VAR" id="tpVar">TP</field>
                    <value name="VALUE"><shadow type="math_number"><field name="NUM">10</field></shadow></value>
                    <next>
                      <block type="variables_set" id="init_sl">
                        <field name="VAR" id="slVar">SL</field>
                        <value name="VALUE"><shadow type="math_number"><field name="NUM">10</field></shadow></value>
                        <next>
                          <block type="variables_set" id="init_sequence_index">
                            <field name="VAR" id="sequenceIndexVar">SequenceIndex</field>
                            <value name="VALUE"><shadow type="math_number"><field name="NUM">0</field></shadow></value>
                            <next>
                              <block type="variables_set" id="init_trade_sequence">
                                <field name="VAR" id="tradeSequenceVar">TradeSequence</field>
                                <value name="VALUE">
                                  <shadow type="lists_create_with">
                                    <mutation items="4"></mutation>
                                    <value name="ADD0"><shadow type="text"><field name="TEXT">odd</field></shadow></value>
                                    <value name="ADD1"><shadow type="text"><field name="TEXT">odd</field></shadow></value>
                                    <value name="ADD2"><shadow type="text"><field name="TEXT">even</field></shadow></value>
                                    <value name="ADD3"><shadow type="text"><field name="TEXT">even</field></shadow></value>
                                  </shadow>
                                </value>
                              </block>
                            </next>
                          </block>
                        </next>
                      </block>
                    </next>
                  </block>
                </next>
              </block>
            </next>
          </block>
        </next>
      </block>
    </next>
  </block>

  <!-- Main Loop -->
  <block type="controls_whileUntil" id="main_loop" x="20" y="300">
    <field name="MODE">WHILE</field>
    <value name="BOOL">
      <block type="logic_boolean" id="condition_profit">
        <field name="BOOL">TRUE</field>
      </block>
    </value>
    <statement name="DO">
      <block type="procedures_callnoreturn" id="trade_block">
        <mutation name="Trade"></mutation>
        <next>
          <!-- Update Total Profit -->
          <block type="variables_set" id="update_profit">
            <field name="VAR" id="totalProfitVar">TotalProfit</field>
            <value name="VALUE">
              <shadow type="math_arithmetic">
                <field name="OP">ADD</field>
                <value name="A"><shadow type="variables_get"><field name="VAR" id="totalProfitVar">TotalProfit</field></shadow></value>
                <value name="B"><shadow type="math_number"><field name="NUM">1</field></shadow></value>
              </shadow>
            </value>
            <next>
              <!-- Check win/loss -->
              <block type="controls_if" id="if_win_loss">
                <value name="IF0">
                  <block type="logic_boolean"><field name="BOOL">TRUE</field></block>
                </value>
                <statement name="DO0">
                  <!-- Reset Current Stake if won -->
                  <block type="variables_set" id="reset_stake">
                    <field name="VAR" id="currentStakeVar">CurrentStake</field>
                    <value name="VALUE"><shadow type="variables_get"><field name="VAR" id="stakeVar">Stake</field></shadow></value>
                  </block>
                </statement>
                <statement name="ELSE">
                  <!-- Multiply Current Stake by Martingale if lost -->
                  <block type="variables_set" id="martingale_stake">
                    <field name="VAR" id="currentStakeVar">CurrentStake</field>
                    <value name="VALUE">
                      <shadow type="math_arithmetic">
                        <field name="OP">MULTIPLY</field>
                        <value name="A"><shadow type="variables_get"><field name="VAR" id="currentStakeVar">CurrentStake</field></shadow></value>
                        <value name="B"><shadow type="variables_get"><field name="VAR" id="martingaleVar">Martingale</field></shadow></value>
                      </shadow>
                    </value>
                  </block>
                </statement>
                <next>
                  <!-- Cycle Sequence -->
                  <block type="variables_set" id="sequence_cycle">
                    <field name="VAR" id="sequenceIndexVar">SequenceIndex</field>
                    <value name="VALUE">
                      <shadow type="math_arithmetic">
                        <field name="OP">MODULO</field>
                        <value name="A">
                          <shadow type="math_arithmetic">
                            <field name="OP">ADD</field>
                            <value name="A"><shadow type="variables_get"><field name="VAR" id="sequenceIndexVar">SequenceIndex</field></shadow></value>
                            <value name="B"><shadow type="math_number"><field name="NUM">1</field></shadow></value>
                          </shadow>
                        </value>
                        <value name="B"><shadow type="math_number"><field name="NUM">4</field></shadow></value>
                      </shadow>
                    </value>
                  </block>
                  <next>
                    <!-- Stop trading if TP or SL reached -->
                    <block type="controls_if" id="stop_trading">
                      <value name="IF0">
                        <block type="logic_or">
                          <value name="A">
                            <block type="logic_compare">
                              <field name="OP">GTE</field>
                              <value name="A"><shadow type="variables_get"><field name="VAR" id="totalProfitVar">TotalProfit</field></shadow></value>
                              <value name="B"><shadow type="variables_get"><field name="VAR" id="tpVar">TP</field></shadow></value>
                            </block>
                          </value>
                          <value name="B">
                            <block type="logic_compare">
                              <field name="OP">LTE</field>
                              <value name="A"><shadow type="variables_get"><field name="VAR" id="totalProfitVar">TotalProfit</field></shadow></value>
                              <value name="B"><shadow type="variables_get"><field name="VAR" id="slVar">SL</field></shadow></value>
                            </block>
                          </value>
                        </block>
                      </value>
                      <statement name="DO0">
                        <block type="controls_stop" id="stop_loop">
                          <field name="MODE">ALL</field>
                        </block>
                      </statement>
                    </block>
                  </next>
                </next>
              </block>
            </next>
          </block>
        </next>
      </block>
    </statement>
  </block>
</xml>